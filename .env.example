# Environment Configuration for Sri Lanka Bus GPS Simulator

# API Configuration
API_BASE_URL=http://localhost:3000/api
API_TIMEOUT=5000

# Simulator Settings
UPDATE_INTERVAL=30000
MAX_BUSES=28
SIMULATION_SPEED=1

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true

# GPS Device Settings
GPS_ACCURACY_MIN=5
GPS_ACCURACY_MAX=50
BATTERY_DRAIN_RATE=0.1

# Development Settings
NODE_ENV=development
DEBUG_MODE=false