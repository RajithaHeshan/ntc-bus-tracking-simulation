{
  "name": "sri-lanka-bus-gps-simulator",
  "version": "1.0.0",
  "description": "IoT GPS Device Simulator for Sri Lanka Bus Tracking System - Generates realistic location data every 30 seconds for buses on predefined routes",
  "type": "module",
  "main": "src/simulator.js",
  "scripts": {
    "start": "node src/simulator.js",
    "dev": "nodemon src/simulator.js",
    "single-bus": "node src/examples/single-bus-demo.js",
    "route-demo": "node src/examples/route-demo.js",
    "test-api": "node src/examples/test-api-connection.js",
    "generate-data": "node src/utils/data-generator.js"
  },
  "keywords": [
    "gps",
    "simulator",
    "iot",
    "bus-tracking",
    "sri-lanka",
    "location-data",
    "real-time"
  ],
  "author": "Sri Lanka Bus Tracking Project",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "dotenv": "^17.2.2",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}